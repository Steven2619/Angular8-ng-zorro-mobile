{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared": [ "./src/app/shared" ],
      "@shared/*": [ "./src/app/shared/*" ],
      "@pages": [ "./src/app/pages" ],
      "@pages/*": [ "./src/app/pages/*" ],
      "@services": [ "./src/app/services" ],
      "@services/*": [ "./src/app/services/*" ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
